{
	"name": "backend-marketplace",
	"version": "1.0.0",
	"description": "Aplicação backend para um e-commerce, utilizando Fastify, TypeScript, JWT e Swagger.",
	"main": "index.js",
	"scripts": {
		"api": "tsx api/index.ts",
		"dev": "tsx watch api/index.ts",
		"format": "npx @biomejs/biome format ./api --max-diagnostics=1000 --write --indent-width=2 --indent-style=tab --javascript-formatter-quote-style=single"
	},
	"drizzle": {
		"generate": "npx drizzle-kit generate"
	},
	"keywords": [
		"e-commerce",
		"api",
		"fastify",
		"typescript",
		"jwt",
		"swagger"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/MatheusPesarini/projeto-loja"
	},
	"author": "",
	"license": "ISC",
	"type": "module",
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.0.1",
		"@fastify/helmet": "^13.0.1",
		"@fastify/swagger": "^9.5.1",
		"@fastify/swagger-ui": "^5.2.3",
		"argon2": "^0.43.1",
		"dotenv": "^17.2.0",
		"drizzle-orm": "^0.44.3",
		"fastify": "^5.4.0",
		"fastify-type-provider-zod": "^5.0.2",
		"jose": "^6.0.12",
		"pg": "^8.16.3",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@types/node": "^24.1.0",
		"@types/pg": "^8.15.4",
		"@types/swagger-jsdoc": "^6.0.4",
		"drizzle-kit": "^0.31.4",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	}
}
